<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>io.playn</groupId>
    <artifactId>playn-project</artifactId>
    <version>2.0.2</version>
  </parent>

  <groupId>de.cdietze.rook</groupId>
  <artifactId>rook</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <properties>
    <source.level>1.8</source.level>
    <playn.version>2.0.3</playn.version>
    <tripleplay.version>2.0.3</tripleplay.version>
    <playn-util.version>master-SNAPSHOT</playn-util.version>
    <guava.version>24.1-android</guava.version>
    <guava.gwt.version>24.1-jre</guava.gwt.version>
  </properties>

  <repositories>
    <repository>
        <id>jitpack.io</id>
        <url>https://jitpack.io</url>
    </repository>
  </repositories>

  <profiles>
    <profile>
      <id>java</id>
      <activation><activeByDefault>true</activeByDefault></activation>
      <modules><module>java</module></modules>
    </profile>
    <profile>
      <id>android</id>
      <modules><module>android</module></modules>
    </profile>
    <profile>
      <id>robosim</id>
      <modules><module>robovm</module></modules>
    </profile>
    <profile>
      <id>robodev</id>
      <modules><module>robovm</module></modules>
    </profile>
    <profile>
      <id>html</id>
      <modules><module>html</module></modules>
    </profile>
  </profiles>
  <modules>
    <module>assets</module>
    <module>core</module>
  </modules>
</project>